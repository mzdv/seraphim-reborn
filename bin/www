#!/usr/bin/env node
var debug = require('debug')('expressapp');
var app = require('../app');

var deuces = require("deuces");
deuces.connect();

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

var io = require("socket.io")(server);

io.on("connection", function(socket) {

    deuces.commands.ping("PING", function(result) {
        console.log("Redis status: " + result ? " up" : " down");
    });

    deuces.commands.subscribe(["http", "net", "system"], function(result) {
        console.log(result);    //just to test how this thing gathers data; will be replaced by a parser and socket.io
    });

    socket.on("kill", function(){
        deuces.disconnect(function() {
            console.log("Redis connection killed");
        });
        console.log("Good bye!")
    });
});
extends layout

block content
    h1= title
    p Dashboard
    p Current time and date: #{date}

    .http
        h3 Number of GET requests
        p.get 0
        h3 Number of POST requests
        p.post 0
        h3 Time
        p.data time

    .net
        h3 Active network interfaces
        p.networkInterface ethx
        h3 Transport of data
        p.transport xcoming
        h3 Time
        p.data time

    .system
        h3 Flag
        p.flag someFlag
        h3 Data
        p.data someData
        h3 Time
        p.data time

    script(src="/components/socket.io-client/socket.io.js")
    script.
        var socket = io.connect("http://localhost:3000");
        var http = io.connect("http://localhost:3000/resources/http");

        socket.on("hello", function(data) {
            console.log(data);
        });
        socket.emit("goodbye", {
            goodbye: "rolf"
        });
        http.on("bello", function(data) {
            console.log(data);
        });